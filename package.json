{
  "name": "hyper-space-wave",
  "version": "1.0.0",
  "description": "Casual wave based shmup",
  "author": "Justin Walsh",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --filter '@hyper-space-wave/*' build",
    "dev": "pnpm --parallel --filter @hyper-space-wave/web... dev",
    "dev:assets": "pnpm --filter assets dev",
    "dev:web": "pnpm --parallel --filter @hyper-space-wave/web... dev",
    "dev:native": "pnpm --parallel --filter @hyper-space-wave/native... dev"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.25.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "18.3.1",
      "@types/react-dom": "18.3.1"
    }
  }
}
